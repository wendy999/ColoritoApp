<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.platzi.coloritoapp.JuegoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_correctos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correctas"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_incorrectas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incorrectas"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_n_intentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intentos:"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
