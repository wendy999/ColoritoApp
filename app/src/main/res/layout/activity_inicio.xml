<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/unknown"
    tools:context="com.platzi.coloritoapp.InicioActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/unknown"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/apple"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/botton_play"
            android:background="@color/unknown"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:drawableBottom="@mipmap/ic_launcher_foreground_play"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/botton_conf"
            android:background="@color/unknown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableBottom="@mipmap/ic_launcher_foreground_settings"

            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/botton_score"
            android:background="@color/unknown"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:drawableBottom="@mipmap/ic_launcher_foreground_score"

            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>
