<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.platzi.coloritoapp.JuegoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_correctos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correctas"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_incorrectas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incorrectas"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_n_intentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intentos:"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vidas:"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porcentage aciertos:"
            android:fontFamily="casual"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="#E6E6FA"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_marginTop="22dp"
            android:shadowColor="@color/colorPrimary"
            android:id="@+id/button" />

        <Button
            android:id="@+id/button2"
            android:background="#E6E6FA"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button3"
            android:layout_marginTop="19dp"
            android:shadowColor="@color/colorPrimary" />

        <Button
            android:id="@+id/button3"
            android:background="#E6E6FA"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="81dp"
            android:layout_marginStart="81dp"
            android:shadowColor="@color/colorPrimary" />

        <Button
            android:id="@+id/button4"
            android:background="#E6E6FA"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_centerVertical="true"
            android:shadowColor="@color/colorPrimary" />

    </RelativeLayout>

</LinearLayout>
